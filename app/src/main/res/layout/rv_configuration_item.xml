<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/rv_configuration_item_padding"
        android:textSize="@dimen/rv_configuration_item_text_size"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/mtv_name"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/rv_configuration_item_padding"
        android:textSize="@dimen/rv_configuration_item_text_size"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/mtv_address"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/rv_configuration_item_padding"
        android:textSize="@dimen/rv_configuration_item_text_size"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/mtv_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/mtv_type"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="@dimen/rv_configuration_item_padding"
        android:textSize="@dimen/rv_configuration_item_text_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>